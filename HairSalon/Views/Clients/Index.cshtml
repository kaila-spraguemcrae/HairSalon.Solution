@{
  Layout = "_Layout";
}

@model List<HairSalon.Models.Client>
@using HairSalon.Models;

<h1>All Clients:</h1>
<hr/>
@if(Model.Count == 0)
{
  <h2>There are no clients</h2>
}

@foreach(Client client in Model)
{
  <h2>Client: @client.Name | Sylist: @client.Stylist.Name</h2>

} 
<hr/>
<p>@Html.ActionLink("Add another client", "Create") | @Html.ActionLink("Stylists", "Index", "Stylists")</p>